body {
	font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
}

h1, h2, h3, h4, h5, h6 {
	margin: 0;
	padding: 0;
	font-weight: bold;
}

// Header
header.navbar {
	border: 0;
	box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
}

// Sidebar
aside.sidebar {
	background: none;
	border: 0;
}

aside.sidebar .sidebar-sub-header a.sidebar-link {
	font-weight: 400 !important;
}

aside.sidebar a.sidebar-link.active {
	background: #f1f1f1;
	border-radius: 0 20px 20px 0;
}

aside.sidebar .sidebar-group a.sidebar-link {
	font-weight: bold;
	border-radius: 0 20px 20px 0;
}

aside.sidebar .sidebar-heading span {
	color: #775200;
}

// Buttons
.theme-container .home .hero .action-button {
	padding: 8px 30px;
}

// Homepage
.is--homepage main.home .feature {
	padding: 0;
}

.is--homepage {
	background-image: url('/bg-home-white.jpg');
	background-size: cover;
	background-repeat: no-repeat;
	min-height: 100vh;
	background-position: center center;
}

.is--homepage header.navbar {
	border: 0;
	background: none;
	box-shadow: none;
}

.is--homepage .navbar .links {
	background: none;
}

// Content
main.page {
	background-image: url('/bg-body.png');
	background-repeat: repeat;
	background-attachment: fixed;
}

.content:not(.custom) p a {
	border-bottom: 2px solid;

	&:hover {
		text-decoration: none;
	}
}

.content:not(.custom) {
	margin: 2rem auto;
	background: #fff;
	box-shadow: 0 3px 5px rgba(0, 0, 0, 0.1);

	h2 {
		padding-bottom: 0.5rem !important;
		border-bottom: 2px solid rgba(160, 109, 0, 0.5);
	}
}

// Typography
.content:not(.custom) p {
	line-height: 1.5em;
}

.content:not(.custom) h1 {
	color: #775200;
}

// Content > Dropcap only on first paragraph
.content:not(.custom) h1 + p:first-letter {
	text-transform: uppercase;
	// font-family: 'Cinzel Decorative', cursive;
	font-size: 56px;
	font-weight: bold;
	vertical-align: bottom;
	float: left;
	line-height: 0.9;
	margin-right: 0.1em;
	margin-left: -0.05em;
	margin-top: -0.05em;
}

.content:not(.custom) img {
	background: #fff;
	margin: 1rem;
	padding: 1rem;
	float: right;
	clear: both;
}

.content:not(.custom) img:first-child {
	background: #fff;
	margin: 0;
	padding: 1rem;
	float: right;
	clear: both;
}

// Content > Blockquote
.content:not(.custom) blockquote {
	margin: 0;
	border: 0;
	padding: 0;
}

.content:not(.custom) blockquote > p {
	color: #565656;
	padding: 20px;
	background: #f1f1f1;
}

// Responsive
@media (max-width: 720px) {
	aside.sidebar {
		background: #fff;
		border-right: 1px solid #eaecef;
	}

	.is--homepage header.navbar {
		border: 0;
		background: #fff;
		box-shadow: none;
	}

	.content:not(.custom) p a {
		white-space: nowrap;
	}
}